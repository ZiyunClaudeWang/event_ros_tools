<launch>
  <arg name="slice_time" default="0.025"/>
  <arg name="event_topic" default="/metavision_driver/events"/>
  <node pkg="event_ros_tools" type="flicker_node" name="flicker" clear_params="true"
	output="screen">
    <param name="slice_time" value="$(arg slice_time)"/>
    <!-- what kind of messages to subscribe to (dvs or prophesee) -->
    <param name="message_type" value="prophesee"/>
    <param name="mode" value="ignore_polarities_inv"/>
    <param name="statistics_print_interval" value="1.0"/>
    <param name="duration" value="3.0e-3"/>
    <param name="lead_time" value="2.0e-3"/>
    <!-- remap the events topic -->
    <!--
    <remap from="~events" to="/prophesee/camera/cd_events_buffer"/>
    -->
    <remap from="~events" to="$(arg event_topic)"/>
  </node>
</launch>
